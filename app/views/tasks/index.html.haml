%h1 Listing tasks
%table
  %thead
    %tr
      %th Application
      %th Status
      %th Progress
      %th Duration
      %th{:colspan => "3"}
  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.application_id
        %td= task.status
        %td= task.progress
        %td= task.duration
        %td= link_to 'Show', task
        %td= link_to 'Edit', edit_task_path(task)
        %td= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Task', new_task_path
