= form_for(@task) do |f|
  - if @task.errors.any?
    #error_explanation
      %h2
        = pluralize(@task.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - @task.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :application_id
    %br/
    = f.number_field :application_id
  .field
    = f.label :status
    %br/
    = f.text_field :status
  .field
    = f.label :progress
    %br/
    = f.number_field :progress
  .field
    = f.label :duration
    %br/
    = f.number_field :duration
  .actions
    = f.submit
